package com.syntax.class08;

public class Task1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		
		int sum=0;
		for (int i=1; i<50; i++) {
			if (i%2==0) 
			{	System.out.print(i);
			}
				
			{	
				sum+=i;
				System.out.print(sum);
			}
		}
		System.out.println("------------------------------");
		int sum2=0;
		for (int a=1; a<50; a++) {
			if (!(a%2==0))
			sum2+=a;
			{
				System.out.print(sum2);
			}
		}		
		System.out.println("------------------------------");
		System.out.println(sum+sum2);
	}

}
